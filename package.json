{
  "name": "notesynchronizer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf attachments/* processed/*",
    "prestart": "mkdir -p attachments processed && npm run format:js && clear",
    "start": "ts-node index.ts",
    "process": "npm run prestart && ts-node process.ts",
    "playground": "npm run prestart && ts-node playground.test.ts",
    "test": "npm run prestart && ts-node index.ts && ts-node process.ts",
    "format": "npm run format:js && npm run format:data",
    "format:data": "prettier --parser json --write **/*.data",
    "format:js": "prettier --write **/*.js **/*.ts && prettier --parser json --write *.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synle/noteSynchronizer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/synle/noteSynchronizer/issues"
  },
  "homepage": "https://github.com/synle/noteSynchronizer#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "googleapis": "^39.2.0",
    "js-base64": "^3.4.5",
    "jsdom": "^16.4.0",
    "sequelize-typescript-decorators": "^2.1.4",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
